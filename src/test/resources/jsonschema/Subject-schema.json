{
	"$id": "jsonschema:jsonschema/Subject",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"required": [
		"kind",
		"version"
	],
	"properties": {
		"kind": {
			"type": "string"
		},
		"version": {
			"type": "string"
		},

		"selector": {
			"type": "object",
			"patternProperties": {
				".": {
					"type" : "string"
				}
			}
		}
	},
	"additionalProperties": false
}
