{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"required": [
		"kind",
		"version"
	],
	"properties": {
		"kind": {
			"type"    : "string",
			"pattern" : "^\\s*[\\w]+(\\s*[.]\\s*[\\w]+)*\\s*$"
		},
		"version": {
			"type"    : "string",
			"pattern" : "^\\s*[\\d]+(\\s*[.]\\s*[\\d]+)*\\s*$"
		}
	}
}
